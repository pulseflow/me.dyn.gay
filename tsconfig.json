{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"@components/*": ["./src/components/*"],
			"@layouts/*": ["./src/layouts/*"],
			"@utils/*": ["./src/utils/*"],
			"~/*": ["./src/*"]
		},
		"types": ["unplugin-icons/types/astro", "vite-plugin-glsl/ext"]
	},
	"exclude": ["node_modules", "dist", "public"]
}
